%%titulo feito com TikZ
\newdimen\altura
\altura=12cm
\newcommand{\titulo}[3]{
\begin{tikzpicture}[remember picture,overlay]
\node at (current page.north west){
  \begin{tikzpicture}[remember picture,overlay]
      \draw[fill=#3] (0,0) rectangle (\paperwidth,-\altura);
      \node[right] at (4cm,-.5*\altura) {
	\includegraphics[height=6cm]{#1} %%primeiro logo
      };
  \end{tikzpicture}
};
\node at (current page.north east){
  \begin{tikzpicture}[remember picture,overlay]
      \node[left] at (-4cm,-.5*\altura) {
	\includegraphics[height=6cm]{#2} %%segundo logo
      };
  \end{tikzpicture}
};
\node at (current page.north){
  \begin{tikzpicture}[remember picture,overlay,node distance=2mm]
    \node[white] (n1) at (0,-4) {\Huge\textbf{\tituloposter}};
    \node[white] (n2) at (0,-7) {\huge\textbf{\nome}};
    \node[white] (n3) [below = of n2] {\Large\curso};
    \node[white] [below = of n3] {\Large\texttt{\myemail}};
  \end{tikzpicture}
};
\end{tikzpicture}
}

